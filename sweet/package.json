{
    "name": "@vigilio/sweet",
    "version": "0.0.10",
    "description": "this library is like sweet but optimized",
    "main": "./dist/cjs/index.js",
    "module": "./dist/esm/index.js",
    "types": "./dist/esm/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/esm/index.js",
            "require": "./dist/cjs/index.js"
        },
        "./react": {
            "import": "./dist/esm/react.js",
            "require": "./dist/cjs/react.js"
        },
        "./vue": {
            "import": "./dist/esm/vue.js",
            "require": "./dist/cjs/vue.js"
        },
        "./sweet.min.css": {
            "import": "./src/vigilio-sweet.min.css"
        }
    },
    "typesVersions": {
        "*": {
            "react": [
                "./dist/esm/react.d.ts"
            ],
            "vue": [
                "./dist/esm/vue.d.ts"
            ],
            "sweet.css": [
                "./src/vigilio-sweet.css"
            ]
        }
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/VigilioYonatan/Vigilio/blob/main/sweetREADME.md"
    },
    "files": [
        "dist",
        "LICENSE",
        "README.md",
        "./src/vigilio-sweet.css",
        "./src/sweet.min.js"
    ],
    "keywords": [
        "typescript",
        "sweet alert",
        "modal"
    ],
    "scripts": {
        "build:esm": "tsc",
        "build:cjs": "tsc --module commonjs --outDir dist/cjs",
        "build": "rimraf dist && pnpm build:esm && pnpm build:cjs"
    },
    "author": "Vigilio",
    "license": "ISC"
}
